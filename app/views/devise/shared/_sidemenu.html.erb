<div>
  <h2>Users info</h2>
  
  <%= image_tag user.get_profile_image(100, 100) %>
  
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  
  <div class="row">
    <%= link_to edit_user_path(user), class:"btn btn-secondary" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
  
  <h2>New book</h2>
  
  <%= form_with model: newbook do |f| %>
    <div>
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div>
      <label>Opinion</label>
      <%= f.text_area :body %>
    </div>
    <%= f.submit 'Create Book' %>
  <% end %>
  
</div>







