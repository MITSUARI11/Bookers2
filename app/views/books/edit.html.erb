<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
    <label>Title</label>
    <%= f.text_field :title %>
    
    <label>Opnion</label>
    <%= f.text_area :body %>
    
    <%= f.submit 'Update Book' %>

<% end %>

<div>
    <%= link_to "Show", book_path(@book.id) %>
    <span>|</span>
    <%= link_to "Back", books_path %>
</div>

