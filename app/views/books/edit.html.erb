<h1>Editing Book</h1>

<%= form_with model: @books do |f| %>
    <label>Title</label>
    <%= f.text_field :title %>
    
    <label>Opnion</label>
    <%= f.text_area :body %>
    
    <%= f.submit 'Update Book' %>

<% end %>

<div>
    <%= link_to "Show", book_path(@books.id) %>
    <span>|</span>
    <%= link_to "Back", :back %>
</div>

