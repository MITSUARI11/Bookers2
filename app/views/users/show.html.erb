<%= render 'devise/shared/sidemenu', user: @user_id, newbook: @newbook %>
<%= render 'devise/shared/validation_error', book: @newbook %>


<h2>Books</h2>

<div>
  <% @book.each do |book| %>
    <%= link_to user_path(@user_id) do %>
      <p><%= image_tag @user_id.get_profile_image(100, 100) %></p>
    <% end %>
    <p>Title : <%= link_to book.title, book_path(book.id) %></p>
    <p>Opinion : <%= book.body %></p>
  <% end %>
</div>



